client.focused         		#627192 		#627192		#ffffff 		#627192
client.focused_inactive 	#627192 		#627192 		#ffffff 		#627192 
client.unfocused        		#627192 		#627192  		#ffffff 		#627192 
client.urgent           		#aa9ea3 		#aa9ea3 		#ffffff 		#aa9ea3

# focus does not follow mouse
focus_follows_mouse no

for_window [class=".*"] border pixel 1
for_window [class="Synapse"] border pixel 0
#new_window none

